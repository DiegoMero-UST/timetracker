<%= form_with(model: new_user, url: create_user_time_records_path, class: "mt-3") do |f| %>
  <div class="row align-items-end">
    <div class="col">
      <%= f.label :name, "Nombre del nuevo usuario", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Ingrese el nombre" %>
    </div>
    <div class="col-auto">
      <%= f.submit "Agregar Usuario", class: "btn btn-primary" %>
    </div>
  </div>
<% end %> 